{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "OutgoingMsg",
  "anyOf": [
    {
      "type": "object",
      "required": [
        "account",
        "color",
        "comment",
        "type"
      ],
      "properties": {
        "account": {
          "$ref": "#/definitions/AccountName"
        },
        "color": {
          "$ref": "#/definitions/ChoiceColor"
        },
        "comment": {
          "$ref": "#/definitions/String"
        },
        "type": {
          "type": "string",
          "enum": [
            "comment"
          ]
        }
      }
    },
    {
      "type": "object",
      "required": [
        "choices",
        "endAt",
        "id",
        "status",
        "title",
        "type"
      ],
      "properties": {
        "choices": {
          "type": "object",
          "additionalProperties": {
            "$ref": "#/definitions/ChoiceColor"
          }
        },
        "endAt": {
          "type": "string",
          "format": "date-time"
        },
        "id": {
          "$ref": "#/definitions/Id"
        },
        "resolved": {
          "anyOf": [
            {
              "$ref": "#/definitions/ChoiceName"
            },
            {
              "type": "null"
            }
          ]
        },
        "stats": {
          "anyOf": [
            {
              "$ref": "#/definitions/Stats"
            },
            {
              "type": "null"
            }
          ]
        },
        "status": {
          "$ref": "#/definitions/Status"
        },
        "title": {
          "$ref": "#/definitions/String"
        },
        "type": {
          "type": "string",
          "enum": [
            "poll"
          ]
        }
      }
    }
  ],
  "definitions": {
    "AccountName": {
      "$ref": "#/definitions/String"
    },
    "ChoiceColor": {
      "$ref": "#/definitions/String"
    },
    "ChoiceName": {
      "$ref": "#/definitions/String"
    },
    "Id": {
      "type": "string",
      "format": "uuid"
    },
    "Stats": {
      "type": "object",
      "required": [
        "totalVotes",
        "votePerChoice"
      ],
      "properties": {
        "totalVotes": {
          "type": "integer",
          "format": "uint",
          "minimum": 0.0
        },
        "votePerChoice": {
          "type": "object",
          "additionalProperties": {
            "type": "integer",
            "format": "uint",
            "minimum": 0.0
          }
        }
      }
    },
    "Status": {
      "enum": [
        "open",
        "closed"
      ]
    },
    "String": {
      "type": "string"
    }
  }
}