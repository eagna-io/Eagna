{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "OutgoingMsg",
  "anyOf": [
    {
      "description": "対象のOutcomeのShareを1つ買うOrderを表現するモデル",
      "type": "object",
      "required": [
        "accountName",
        "id",
        "outcome",
        "time",
        "tipCost",
        "type"
      ],
      "properties": {
        "accountName": {
          "$ref": "#/definitions/AccountName"
        },
        "id": {
          "$ref": "#/definitions/OrderId"
        },
        "outcome": {
          "$ref": "#/definitions/Outcome"
        },
        "time": {
          "type": "string",
          "format": "date-time"
        },
        "tipCost": {
          "description": "このOrderに必要なTipの量( >0 )",
          "allOf": [
            {
              "$ref": "#/definitions/TipNum"
            }
          ]
        },
        "type": {
          "type": "string",
          "enum": [
            "order"
          ]
        }
      }
    }
  ],
  "definitions": {
    "AccountName": {
      "$ref": "#/definitions/String"
    },
    "OrderId": {
      "type": "string",
      "format": "uuid"
    },
    "Outcome": {
      "enum": [
        "realize",
        "unrealize"
      ]
    },
    "String": {
      "type": "string"
    },
    "TipNum": {
      "type": "integer",
      "format": "int32"
    }
  }
}